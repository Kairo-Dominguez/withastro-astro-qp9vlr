import Nav from '../components/Nav.astro';
import Layout from '../layouts/Layout.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Albums - MF DOOM</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="/styles/global.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background: url('/background/Control-V.jpg') no-repeat center center fixed;
            background-size: cover;
            overflow-x: hidden;
        }
        .layout {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        main {
            padding: 20px;
            flex: 1;
        }
        .albums {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin: 40px 0;
            max-width: 1200px;
            width: 100%;
        }
        .album-item {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            transition: transform 0.3s ease-in-out;
            text-align: center;
        }
        .album-container {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            height: 300px; /* Adjusted height for album covers */
            width: 100%;
            background-size: cover;
            background-position: center;
            transition: transform 0.3s ease-in-out;
            cursor: pointer;
        }
        .album-container:hover {
            transform: scale(1.05); /* Slight zoom effect on hover */
        }
        .album-title {
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.7);
            padding: 10px;
            border-radius: 5px;
            font-size: 1.2rem;
            color: white;
            transition: opacity 0.3s ease-in-out;
        }
        .album-item:hover .album-title {
            opacity: 1;
        }
        .scroll-fade-in {
            opacity: 0;
            transform: translateY(50px);
            transition: opacity 1s ease-out, transform 1s ease-out;
        }
        .scroll-fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }
        h1 {
            font-size: 4rem;
            line-height: 1.2;
            color: white;
            text-align: center;
            margin-bottom: 10px; /* Adjusted for spacing */
        }
        .subtitle {
            font-size: 1.5rem;
            color: white;
            text-align: center;
            margin-bottom: 20px; /* Spacing between subtitle and albums */
            font-weight: 400; /* Slightly lighter than main title */
        }
        @media (min-width: 768px) {
            h1 {
                font-size: 5rem;
            }
            .subtitle {
                font-size: 2rem;
            }
        }
        @media (min-width: 1024px) {
            h1 {
                font-size: 6rem;
            }
            .subtitle {
                font-size: 2.5rem;
            }
        }
    </style>
</head>
<body>
    <Nav />
    <Layout title="Albums - MF DOOM" class="layout">
        <main class="flex flex-col items-center justify-center min-h-screen w-full bg-transparent">
            <div class="text-center">
                <h1 class="text-white font-bold leading-tight font-poppins">
                    <span class="text-white">MF</span>
                    <span class="text-green-800">DOOM'S</span>
                    <span class="text-white">Albums</span>
                </h1>
                <!-- Subtitle added here -->
                <p class="subtitle">Listen more about
                 <span class="text-white font-bold">MF</span>
                <span class="text-green-800 font-bold">DOOM</span></p>
                <div class="albums scroll-fade-in">
                    <div class="album-item">
                        <a href="https://open.spotify.com/album/1UcS2nqUhxrZjrBZ3tHk2N" target="_blank" rel="noopener noreferrer">
                            <div class="album-container" style="background-image: url('https://i.pinimg.com/736x/f6/19/22/f61922dd44511194b58fb129528a6c58.jpg');">
                                <div class="album-title">MM..FOOD</div>
                            </div>
                        </a>
                    </div>
                    <div class="album-item">
                        <a href="https://open.spotify.com/album/19bQiwEKhXUBJWY6oV3KZk" target="_blank" rel="noopener noreferrer">
                            <div class="album-container" style="background-image: url('https://i.pinimg.com/564x/c3/a5/88/c3a58888c0ff12913f0564c1b38d619c.jpg');">
                                <div class="album-title">Madvillainy</div>
                            </div>
                        </a>
                    </div>
                    <div class="album-item">
                        <a href="https://open.spotify.com/album/5bjUbZPVTEQcb6W3LquX1E" target="_blank" rel="noopener noreferrer">
                            <div class="album-container" style="background-image: url('https://i.pinimg.com/564x/4a/43/74/4a4374f2637982f4682820c2c5f504d3.jpg');">
                                <div class="album-title">Operation: Doomsday</div>
                            </div>
                        </a>
                    </div>
                    <div class="album-item">
                        <a href="https://open.spotify.com/album/2XfBjZ0ZwKMfwYJDX0JR1O" target="_blank" rel="noopener noreferrer">
                            <div class="album-container" style="background-image: url('https://i.pinimg.com/564x/de/47/6f/de476fc35a4dabf610aeb44f382ec401.jpg');">
                                <div class="album-title">BORN LIKE THIS</div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </Layout>
    <script>
        document.addEventListener('scroll', function() {
            const elements = document.querySelectorAll('.scroll-fade-in');
            elements.forEach(el => {
                const rect = el.getBoundingClientRect();
                if (rect.top < window.innerHeight && rect.bottom > 0) {
                    el.classList.add('visible');
                }
            });
        });
    </script>
</body>
</html>
