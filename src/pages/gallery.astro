import Nav from '../components/Nav.astro';
import Layout from '../layouts/Layout.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery - MF DOOM</title>
    <!-- Import Poppins font from Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="/styles/global.css" rel="stylesheet">
    <style>
        /* Tailwind customization to include Poppins */
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background: url('/background/Control-V.jpg') no-repeat center center fixed; /* Cover the full viewport */
            background-size: cover;
            overflow-x: hidden;
        }

        .layout {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main {
            padding: 20px;
            flex: 1;
        }

        /* Gallery section styling */
        .gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin: 40px 0;
            max-width: 1200px;
            width: 100%;
        }

        .gallery-item {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            transition: transform 0.3s ease-in-out;
        }

        /* Image styling */
        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease-in-out;
        }

        /* MF DOOM inspired hover effect */
        .gallery-item:hover img {
            transform: scale(1.1); /* Zoom effect on hover */
            filter: brightness(0.7) contrast(1.2);
        }

        /* Mask overlay on hover */
        .mask-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 100px;
            height: 100px;
            background: url('https://i.pinimg.com/originals/44/41/8a/44418acb8eb8c079d0f62b4be59bead4.png') no-repeat center center;
            background-size: contain;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
            transform: translate(-50%, -50%);
        }

        .gallery-item:hover .mask-overlay {
            opacity: 1; /* Show mask overlay on hover */
        }

        /* Scroll effect */
        .scroll-fade-in {
            opacity: 0;
            transform: translateY(50px);
            transition: opacity 1s ease-out, transform 1s ease-out;
        }

        .scroll-fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Header styling */
        h1 {
            font-size: 4rem;
            line-height: 1.2;
            color: white;
            text-align: center;
            margin-bottom: 20px;
        }

        @media (min-width: 768px) {
            h1 {
                font-size: 5rem;
            }
        }

        @media (min-width: 1024px) {
            h1 {
                font-size: 6rem;
            }
        }
    </style>
</head>
<body>
    <Nav />

    <Layout title="Gallery - MF DOOM" class="layout">
        <main class="flex flex-col items-center justify-center min-h-screen w-full bg-transparent">
            <div class="text-center">
                <!-- Gallery section header -->
                <h1 class="text-white font-bold leading-tight font-poppins">
                    <span class="text-white">MF</span>
                    <span class="text-green-800">DOOM'S</span>
                    <span class="text-white">Gallery</span>
                </h1>
                
                <!-- Gallery section -->
                <div class="gallery scroll-fade-in">
                    <!-- Example images, replace with actual image paths -->
                    <div class="gallery-item">
                        <img src="/public/tyler ⭐️.jfif" alt="MF DOOM Image 1">
                        <div class="mask-overlay"></div>
                    </div>
                    <div class="gallery-item">
                        <img src="/public/Retro MF Doom Posters Doomsday Kraft Paper Prints DIY Rapper Singer Vi.jfif" alt="MF DOOM Image 2">
                        <div class="mask-overlay"></div>
                    </div>
                    <div class="gallery-item">
                        <img src="/public/mfdoom rap song_.jpg" alt="MF DOOM Image 3">
                        <div class="mask-overlay"></div>
                    </div>
                    <div class="gallery-item">
                        <img src="/public/MFDOOM.jpg" alt="MF DOOM Image 4">
                        <div class="mask-overlay"></div>
                    </div>
                </div>
            </div>
        </main>
    </Layout>

    <script>
        // Scroll effect for the gallery
        document.addEventListener('scroll', function() {
            const elements = document.querySelectorAll('.scroll-fade-in');
            elements.forEach(el => {
                const rect = el.getBoundingClientRect();
                if (rect.top < window.innerHeight && rect.bottom > 0) {
                    el.classList.add('visible');
                }
            });
        });
    </script>
</body>
</html>
